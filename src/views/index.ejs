<%- include('partials/header') %>

    <!-- Hero Section -->
    <div class="relative bg-brand-dark overflow-hidden cyber-grid min-h-[90vh] flex items-center">
        <!-- Background Elements -->
        <div
            class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-transparent to-brand-dark pointer-events-none z-10">
        </div>
        <div class="absolute right-0 top-1/2 -translate-y-1/2 w-1/3 h-2/3 bg-brand-accent/10 blur-[100px] rounded-full">
        </div>

        <div class="max-w-7xl mx-auto relative z-20 w-full">
            <div class="lg:grid lg:grid-cols-12 lg:gap-8">
                <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">
                    <div class="text-brand-accent tracking-widest uppercase text-sm font-mono mb-4 animate-pulse-slow">
                        System Status: Secure </div>
                    <h1 class="text-5xl tracking-tight font-extrabold text-white sm:text-6xl md:text-7xl">
                        <span class="block">Secure Your</span>
                        <span class="block text-brand-light">Digital Future</span>
                    </h1>
                    <p
                        class="mt-6 text-base text-gray-400 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0 font-light border-l-2 border-brand-accent pl-4">
                        <%= appName %> delivers high-performance cybersecurity consulting. From rigorous pentesting to
                            ISO 27001 compliance, we protect what matters most.
                    </p>
                    <div class="mt-8 sm:max-w-lg sm:mx-auto sm:text-center lg:text-left lg:mx-0">
                        <div class="flex flex-col sm:flex-row gap-4">
                            <a href="#contact"
                                class="btn-primary w-full sm:w-auto flex items-center justify-center px-8 py-3 text-brand-dark bg-brand-light hover:bg-white hover:shadow-[0_0_20px_rgba(102,252,241,0.6)] transition-all duration-300 font-bold uppercase tracking-wider rounded-sm z-50">
                                Get Started
                            </a>
                            <a href="#services"
                                class="w-full sm:w-auto flex items-center justify-center px-8 py-3 border border-brand-accent text-brand-light hover:bg-brand-accent/10 hover:text-white hover:border-brand-light transition-all duration-300 font-medium rounded-sm uppercase tracking-wider z-50">
                                Learn More
                            </a>
                        </div>
                    </div>
                </div>
                <div
                    class="mt-12 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 flex items-center justify-center">
                    <div class="relative w-full max-w-md mx-auto">
                        <!-- Abstract Cyberspace Visual -->
                        <div class="absolute inset-0 bg-brand-light/20 blur-2xl animate-pulse"></div>
                        <div class="relative glass-panel p-8 rounded-lg border-l-4 border-brand-light">
                            <div class="space-y-4 font-mono text-sm text-brand-light">
                                <div class="flex justify-between">
                                    <span>> Initiating scan...</span>
                                    <span class="text-green-400">[OK]</span>
                                </div>
                                <div class="flex justify-between">
                                    <span>> Checking firewall...</span>
                                    <span class="text-green-400">[ACTIVE]</span>
                                </div>
                                <div class="flex justify-between">
                                    <span>> Detecting threats...</span>
                                    <span class="text-red-500 animate-pulse">[0 FOUND]</span>
                                </div>
                                <div class="h-1 w-full bg-brand-secondary rounded overflow-hidden mt-4">
                                    <div
                                        class="h-full bg-brand-light w-2/3 animate-[width_2s_ease-in-out_infinite_alternate]">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Services Section -->
    <div id="services" class="py-24 bg-brand-dark relative">
        <div class="absolute inset-0 cyber-grid opacity-20 pointer-events-none"></div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="lg:text-center mb-16">
                <h2 class="text-brand-accent font-semibold tracking-wide uppercase text-sm font-mono">Capabilities</h2>
                <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-white sm:text-4xl">
                    Comprehensive Cyber Protection
                </p>
                <p class="mt-4 max-w-2xl text-xl text-gray-400 lg:mx-auto">
                    We identify vulnerabilities <span class="text-brand-light">before</span> attackers do.
                </p>
            </div>

            <div class="mt-10">
                <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
                    <!-- Service 1: Cybersecurity Audits -->
                    <div
                        class="glass-panel p-6 rounded-lg transition-all duration-300 hover:transform hover:-translate-y-1 group">
                        <dt>
                            <div
                                class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-brand-secondary text-brand-light border border-brand-accent group-hover:bg-brand-accent group-hover:text-brand-dark transition-colors duration-300">
                                <!-- Heroicon name: shield-check -->
                                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <p
                                class="ml-16 text-lg leading-6 font-medium text-white group-hover:text-brand-light transition-colors">
                                Audits & Pentesting</p>
                        </dt>
                        <dd class="mt-2 ml-16 text-base text-gray-400">
                            Comprehensive security audits and penetration testing to identify vulnerabilities before
                            they are exploited.
                        </dd>
                    </div>

                    <!-- Service 2: Training -->
                    <div
                        class="glass-panel p-6 rounded-lg transition-all duration-300 hover:transform hover:-translate-y-1 group">
                        <dt>
                            <div
                                class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-brand-secondary text-brand-light border border-brand-accent group-hover:bg-brand-accent group-hover:text-brand-dark transition-colors duration-300">
                                <!-- Heroicon name: academic-cap -->
                                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path d="M12 14l9-5-9-5-9 5 9 5z" />
                                    <path
                                        d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                                </svg>
                            </div>
                            <p
                                class="ml-16 text-lg leading-6 font-medium text-white group-hover:text-brand-light transition-colors">
                                Cybersecurity Training</p>
                        </dt>
                        <dd class="mt-2 ml-16 text-base text-gray-400">
                            Specialized training programs to empower your team with the latest cybersecurity knowledge
                            and best practices.
                        </dd>
                    </div>

                    <!-- Service 3: Web Development -->
                    <div
                        class="glass-panel p-6 rounded-lg transition-all duration-300 hover:transform hover:-translate-y-1 group">
                        <dt>
                            <div
                                class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-brand-secondary text-brand-light border border-brand-accent group-hover:bg-brand-accent group-hover:text-brand-dark transition-colors duration-300">
                                <!-- Heroicon name: globe-alt / code -->
                                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                                </svg>
                            </div>
                            <p
                                class="ml-16 text-lg leading-6 font-medium text-white group-hover:text-brand-light transition-colors">
                                Web Development</p>
                        </dt>
                        <dd class="mt-2 ml-16 text-base text-gray-400">
                            Building secure, high-performance websites tailored to your business needs using modern
                            technologies.
                        </dd>
                    </div>

                    <!-- Service 4: Custom Software -->
                    <div
                        class="glass-panel p-6 rounded-lg transition-all duration-300 hover:transform hover:-translate-y-1 group">
                        <dt>
                            <div
                                class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-brand-secondary text-brand-light border border-brand-accent group-hover:bg-brand-accent group-hover:text-brand-dark transition-colors duration-300">
                                <!-- Heroicon name: chip -->
                                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                                </svg>
                            </div>
                            <p
                                class="ml-16 text-lg leading-6 font-medium text-white group-hover:text-brand-light transition-colors">
                                Custom Software</p>
                        </dt>
                        <dd class="mt-2 ml-16 text-base text-gray-400">
                            Development of bespoke software solutions and programming services for any complex
                            requirement.
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>

    <!-- Certifications Section -->
    <div id="certifications" class="bg-brand-secondary py-16 border-y border-brand-accent/10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="lg:text-center mb-10">
                <h2 class="text-brand-accent font-semibold tracking-wide uppercase text-sm font-mono">Trust</h2>
                <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-white sm:text-4xl">
                    Certified Excellence
                </p>
            </div>
            <div class="flex justify-center flex-wrap gap-8 text-center text-gray-500 font-bold text-2xl font-mono">
                <div
                    class="flex items-center p-4 border border-transparent hover:text-brand-light hover:border-brand-accent/30 rounded transition-all duration-300 cursor-default">
                    ISO 27001 Certified</div>
                <div
                    class="flex items-center p-4 border border-transparent hover:text-brand-light hover:border-brand-accent/30 rounded transition-all duration-300 cursor-default">
                    OSCP Certified Team</div>
                <div
                    class="flex items-center p-4 border border-transparent hover:text-brand-light hover:border-brand-accent/30 rounded transition-all duration-300 cursor-default">
                    OWASP Members</div>
                <div
                    class="flex items-center p-4 border border-transparent hover:text-brand-light hover:border-brand-accent/30 rounded transition-all duration-300 cursor-default">
                    CEH Master</div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div id="contact" class="bg-brand-dark py-24 relative overflow-hidden">
        <div
            class="absolute right-0 bottom-0 w-1/2 h-full bg-gradient-to-l from-brand-secondary/20 to-transparent pointer-events-none">
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="max-w-lg mx-auto md:max-w-none md:grid md:grid-cols-2 md:gap-8">
                <div>
                    <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
                        Get in touch
                    </h2>
                    <p class="mt-3 text-lg text-gray-400">
                        Ready to secure your infrastructure? Contact us for a confidential consultation.
                    </p>
                    <div class="mt-8">
                        <div class="flex items-center group">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-brand-accent group-hover:text-brand-light transition-colors"
                                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <div class="ml-3 text-base text-gray-300 group-hover:text-brand-light transition-colors">
                                <p>+1 (555) 123-4567</p>
                            </div>
                        </div>
                        <div class="mt-6 flex items-center group">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-brand-accent group-hover:text-brand-light transition-colors"
                                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div class="ml-3 text-base text-gray-300 group-hover:text-brand-light transition-colors">
                                <p>secure@fastcenter.eu</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-12 sm:mt-16 md:mt-0">
                    <!-- Success Message Display -->
                    <% if (successMessage) { %>
                        <div class="bg-brand-accent/20 border border-brand-light text-brand-light px-4 py-3 rounded relative mb-4 font-mono text-sm"
                            role="alert">
                            <span class="block sm:inline">> <%= successMessage %></span>
                        </div>
                        <% } %>

                            <form action="/contact" method="POST" class="grid grid-cols-1 gap-y-6">
                                <div>
                                    <label for="name" class="sr-only">Full name</label>
                                    <input type="text" name="name" id="name" autocomplete="name" required
                                        class="block w-full bg-brand-secondary/50 border border-brand-accent/30 text-white shadow-sm py-3 px-4 placeholder-gray-500 focus:ring-brand-light focus:border-brand-light rounded-sm transition-colors"
                                        placeholder="Full name">
                                </div>
                                <div>
                                    <label for="email" class="sr-only">Email</label>
                                    <input type="email" name="email" id="email" autocomplete="email" required
                                        class="block w-full bg-brand-secondary/50 border border-brand-accent/30 text-white shadow-sm py-3 px-4 placeholder-gray-500 focus:ring-brand-light focus:border-brand-light rounded-sm transition-colors"
                                        placeholder="Email">
                                </div>
                                <div>
                                    <label for="message" class="sr-only">Message</label>
                                    <textarea id="message" name="message" rows="4" required
                                        class="block w-full bg-brand-secondary/50 border border-brand-accent/30 text-white shadow-sm py-3 px-4 placeholder-gray-500 focus:ring-brand-light focus:border-brand-light rounded-sm transition-colors"
                                        placeholder="Secure Message transmission..."></textarea>
                                </div>
                                <div>
                                    <button type="submit"
                                        class="w-full py-3 px-6 text-base font-bold text-brand-dark bg-brand-light hover:bg-white hover:shadow-[0_0_15px_rgba(102,252,241,0.6)] transition-all duration-300 uppercase tracking-wider rounded-sm">
                                        Submit Inquiry
                                    </button>
                                </div>
                            </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>