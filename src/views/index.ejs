    <!-- Hero Section -->
    <div class="relative bg-brand-dark overflow-hidden cyber-grid min-h-[90vh] flex items-center">
        <!-- Background Elements -->
        <div
            class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-transparent to-brand-dark pointer-events-none z-10">
        </div>
        <div class="absolute right-0 top-1/2 -translate-y-1/2 w-1/3 h-2/3 bg-brand-accent/10 blur-[100px] rounded-full">
        </div>

        <div class="max-w-7xl mx-auto relative z-20 w-full">
            <div class="lg:grid lg:grid-cols-12 lg:gap-8">
                <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">
                    <div class="text-brand-accent tracking-widest uppercase text-sm font-mono mb-4 animate-pulse-slow">
                        Estado del Sistema: Seguro </div>
                    <h1 class="text-5xl tracking-tight font-extrabold text-white sm:text-6xl md:text-7xl">
                        <span class="block">Asegura Tu</span>
                        <span class="block text-brand-light text-glow">Futuro Digital</span>
                    </h1>
                    <p
                        class="mt-6 text-base text-gray-400 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0 font-light border-l-2 border-brand-accent pl-4">
                        <%= appName %> ofrece consultoría de ciberseguridad de alto rendimiento. Desde pentesting
                            riguroso hasta desarrollo seguro, protegemos lo que más importa.
                    </p>
                    <div class="mt-8 sm:max-w-lg sm:mx-auto sm:text-center lg:text-left lg:mx-0">
                        <div class="flex flex-col sm:flex-row gap-4">
                            <a href="/contact"
                                class="btn-primary w-full sm:w-auto flex items-center justify-center px-8 py-3 text-brand-dark bg-brand-light hover:bg-white hover:shadow-[0_0_20px_rgba(102,252,241,0.6)] transition-all duration-300 font-bold uppercase tracking-wider rounded-sm z-50">
                                Empezar
                            </a>
                            <a href="/services"
                                class="w-full sm:w-auto flex items-center justify-center px-8 py-3 border border-brand-accent text-brand-light hover:bg-brand-accent/10 hover:text-white hover:border-brand-light transition-all duration-300 font-medium rounded-sm uppercase tracking-wider z-50">
                                Saber Más
                            </a>
                        </div>
                    </div>
                </div>
                <div
                    class="mt-12 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 flex items-center justify-center">
                    <div class="relative w-full max-w-md mx-auto">
                        <!-- Abstract Cyberspace Visual -->
                        <div class="absolute inset-0 bg-brand-light/20 blur-2xl animate-pulse"></div>
                        <div class="relative glass-panel p-8 rounded-lg border-l-4 border-brand-light min-h-[220px]">
                            <div class="space-y-4 font-mono text-xl text-brand-light" id="terminal-content">
                                <!-- Content will be injected by script -->
                            </div>
                        </div>
                        <script>
                            document.addEventListener('DOMContentLoaded', () => {
                                const terminalContent = document.getElementById('terminal-content');
                                const messages = [
                                    { text: "> Iniciando escaneo...", status: "[OK]", statusClass: "text-green-400" },
                                    { text: "> Verificando firewall...", status: "[ACTIVO]", statusClass: "text-green-400" },
                                    { text: "> Detectando amenazas...", status: "[0 ENCONTRADAS]", statusClass: "text-red-500 animate-pulse" }
                                ];

                                let messageIndex = 0;
                                let charIndex = 0;
                                let currentLine = null;
                                let statusSpan = null;

                                function typeWriter() {
                                    if (messageIndex >= messages.length) return;

                                    const message = messages[messageIndex];

                                    if (!currentLine) {
                                        // Create new line structure
                                        const lineDiv = document.createElement('div');
                                        lineDiv.className = 'flex justify-between';

                                        const textSpan = document.createElement('span');
                                        currentLine = textSpan;

                                        statusSpan = document.createElement('span');
                                        statusSpan.className = message.statusClass + ' opacity-0 transition-opacity duration-500';
                                        statusSpan.textContent = message.status;

                                        lineDiv.appendChild(textSpan);
                                        lineDiv.appendChild(statusSpan);
                                        terminalContent.appendChild(lineDiv);
                                    }

                                    if (charIndex < message.text.length) {
                                        currentLine.textContent += message.text.charAt(charIndex);
                                        charIndex++;
                                        setTimeout(typeWriter, 50); // Typing speed
                                    } else {
                                        // Line finished, show status
                                        statusSpan.classList.remove('opacity-0');

                                        // Prepare for next line
                                        messageIndex++;
                                        charIndex = 0;
                                        currentLine = null;
                                        statusSpan = null;

                                        setTimeout(typeWriter, 1000); // Delay before next line
                                    }
                                }

                                typeWriter();
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>

