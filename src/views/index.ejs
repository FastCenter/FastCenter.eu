<%- include('partials/header') %>

    <!-- Hero Section -->
    <div class="relative bg-surface-bg overflow-hidden">
        <div class="max-w-7xl mx-auto">
            <div class="relative z-10 pb-8 bg-surface-bg sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
                <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                    <div class="sm:text-center lg:text-left">
                        <h1 class="text-4xl tracking-tight font-extrabold text-brand-dark sm:text-5xl md:text-6xl">
                            <span class="block xl:inline">Secure Your</span>
                            <span class="block text-brand-light xl:inline">Digital Future</span>
                        </h1>
                        <p
                            class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                            <%= appName %> delivers high-performance cybersecurity consulting. From rigorous pentesting
                                to ISO 27001 compliance, we protect what matters most.
                        </p>
                        <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                            <div class="rounded-md shadow">
                                <a href="#contact"
                                    class="btn-primary w-full flex items-center justify-center px-8 py-3 md:py-4 md:text-lg md:px-10">
                                    Get Started
                                </a>
                            </div>
                            <div class="mt-3 sm:mt-0 sm:ml-3">
                                <a href="#services"
                                    class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-brand-accent bg-brand-light bg-opacity-10 hover:bg-opacity-20 md:py-4 md:text-lg md:px-10 transition">
                                    Learn More
                                </a>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 bg-gray-100 flex items-center justify-center">
            <!-- Placeholder for Hero Image -->
            <div class="text-brand-light opacity-20 text-9xl font-bold select-none rotate-12">
                SECURE
            </div>
        </div>
    </div>

    <!-- Services Section -->
    <div id="services" class="py-12 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="lg:text-center">
                <h2 class="text-base text-brand-accent font-semibold tracking-wide uppercase">Services</h2>
                <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-brand-dark sm:text-4xl">
                    Comprehensive Cyber Protection
                </p>
                <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">
                    We identify vulnerabilities before attackers do.
                </p>
            </div>

            <div class="mt-10">
                <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
                    <!-- Service 1 -->
                    <div class="relative">
                        <dt>
                            <div
                                class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-brand-accent text-white">
                                <!-- Heroicon name: globe-alt -->
                                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                                </svg>
                            </div>
                            <p class="ml-16 text-lg leading-6 font-medium text-brand-dark">Security Audits</p>
                        </dt>
                        <dd class="mt-2 ml-16 text-base text-gray-500">
                            Deep-dive analysis of your infrastructure to ensure robustness against modern threats.
                        </dd>
                    </div>

                    <!-- Service 2 -->
                    <div class="relative">
                        <dt>
                            <div
                                class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-brand-accent text-white">
                                <!-- Heroicon name: scale -->
                                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                                </svg>
                            </div>
                            <p class="ml-16 text-lg leading-6 font-medium text-brand-dark">Pentesting</p>
                        </dt>
                        <dd class="mt-2 ml-16 text-base text-gray-500">
                            Simulating real-world attacks to find and fix weak points in your defenses.
                        </dd>
                    </div>

                    <!-- Service 3 -->
                    <div class="relative">
                        <dt>
                            <div
                                class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-brand-accent text-white">
                                <!-- Heroicon name: shield-check -->
                                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <p class="ml-16 text-lg leading-6 font-medium text-brand-dark">Compliance (ISO 27001)</p>
                        </dt>
                        <dd class="mt-2 ml-16 text-base text-gray-500">
                            Guiding your organization through the complexities of ISO 27001 certification and GDPR.
                        </dd>
                    </div>

                    <!-- Service 4 -->
                    <div class="relative">
                        <dt>
                            <div
                                class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-brand-accent text-white">
                                <!-- Heroicon name: lightning-bolt -->
                                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z" />
                                </svg>
                            </div>
                            <p class="ml-16 text-lg leading-6 font-medium text-brand-dark">Incident Response</p>
                        </dt>
                        <dd class="mt-2 ml-16 text-base text-gray-500">
                            Rapid response teams ready to contain and mitigate breaches 24/7.
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>

    <!-- Certifications Section -->
    <div id="certifications" class="bg-surface-bg py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="lg:text-center mb-10">
                <h2 class="text-base text-brand-accent font-semibold tracking-wide uppercase">Trust</h2>
                <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-brand-dark sm:text-4xl">
                    Certified Excellence
                </p>
            </div>
            <div class="flex justify-center flex-wrap gap-8 text-center text-gray-400 font-bold text-2xl">
                <div class="flex items-center p-4">ISO 27001 Certified</div>
                <div class="flex items-center p-4">OSCP Certified Team</div>
                <div class="flex items-center p-4">OWASP Members</div>
                <div class="flex items-center p-4">CEH Master</div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div id="contact" class="bg-brand-dark py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-lg mx-auto md:max-w-none md:grid md:grid-cols-2 md:gap-8">
                <div>
                    <h2 class="text-2xl font-extrabold text-white sm:text-3xl">
                        Get in touch
                    </h2>
                    <p class="mt-3 text-lg text-gray-300">
                        Ready to secure your infrastructure? Contact us for a confidential consultation.
                    </p>
                    <div class="mt-8">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <!-- Heroicon name: phone -->
                                <svg class="h-6 w-6 text-brand-light" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <div class="ml-3 text-base text-gray-300">
                                <p>+1 (555) 123-4567</p>
                            </div>
                        </div>
                        <div class="mt-6 flex">
                            <div class="flex-shrink-0">
                                <!-- Heroicon name: mail -->
                                <svg class="h-6 w-6 text-brand-light" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div class="ml-3 text-base text-gray-300">
                                <p>secure@fastcenter.eu</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-12 sm:mt-16 md:mt-0">
                    <!-- Success Message Display -->
                    <% if (successMessage) { %>
                        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4"
                            role="alert">
                            <span class="block sm:inline">
                                <%= successMessage %>
                            </span>
                        </div>
                        <% } %>

                            <form action="/contact" method="POST" class="grid grid-cols-1 gap-y-6">
                                <div>
                                    <label for="name" class="sr-only">Full name</label>
                                    <input type="text" name="name" id="name" autocomplete="name" required
                                        class="block w-full shadow-sm py-3 px-4 placeholder-gray-500 focus:ring-brand-accent focus:border-brand-accent border-gray-300 rounded-md"
                                        placeholder="Full name">
                                </div>
                                <div>
                                    <label for="email" class="sr-only">Email</label>
                                    <input type="email" name="email" id="email" autocomplete="email" required
                                        class="block w-full shadow-sm py-3 px-4 placeholder-gray-500 focus:ring-brand-accent focus:border-brand-accent border-gray-300 rounded-md"
                                        placeholder="Email">
                                </div>
                                <div>
                                    <label for="message" class="sr-only">Message</label>
                                    <textarea id="message" name="message" rows="4" required
                                        class="block w-full shadow-sm py-3 px-4 placeholder-gray-500 focus:ring-brand-accent focus:border-brand-accent border-gray-300 rounded-md"
                                        placeholder="Corporate Message"></textarea>
                                </div>
                                <div>
                                    <button type="submit" class="btn-primary w-full py-3 px-6 text-base">
                                        Submit Inquiry
                                    </button>
                                </div>
                            </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>