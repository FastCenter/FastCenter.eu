                                class="space-y-2 text-green-400 overflow-y-auto flex-grow font-mono">
                                <!-- Content injected by script -->
                            </div>
                        </div>
                        <script>
                            document.addEventListener('DOMContentLoaded', () => {
                                const terminal = document.getElementById('services-terminal');
                                if (!terminal) return;

                                const commands = [
                                    { text: "> nmap -sC -sV -p- 10.10.11.23", delay: 1000 },
                                    { text: "Starting Nmap 7.94...", delay: 500, color: "text-gray-400" },
                                    { text: "PORT      STATE SERVICE     VERSION", delay: 200, color: "text-gray-400" },
                                    { text: "22/tcp    open  ssh         OpenSSH 8.9p1", delay: 100, color: "text-gray-400" },
                                    { text: "80/tcp    open  http        nginx/1.18.0", delay: 100, color: "text-gray-400" },
                                    { text: "445/tcp   open  microsoft-ds Windows Server 2019", delay: 100, color: "text-gray-400" },
                                    { text: "> python3 exploit.py 10.10.11.23", delay: 1500 },
                                    { text: "[+] Target appears vulnerable to CVE-2024-XXXX", delay: 600, color: "text-yellow-400" },
                                    { text: "[*] Sending payload...", delay: 400, color: "text-gray-400" },
                                    { text: "[+] Reverse shell connection established!", delay: 800, color: "text-green-500 font-bold" },
                                    { text: "C:\\Windows\\system32> whoami", delay: 1000, color: "text-white" },
                                    { text: "nt authority\\system", delay: 500, color: "text-brand-light font-bold" }
                                ];

                                let cmdIndex = 0;
                                let isWriting = false;

                                function typeCommand() {
                                    if (cmdIndex >= commands.length) {
                                        setTimeout(() => {
                                            terminal.innerHTML = '';
                                            cmdIndex = 0;
                                            typeCommand();
                                        }, 5000);
                                        return;
                                    }

                                    isWriting = true;
                                    const cmd = commands[cmdIndex];
                                    const p = document.createElement('div');
                                    p.className = cmd.color || 'text-green-400';
                                    p.style.fontFamily = "'Fira Code', monospace"; // Force font
                                    terminal.appendChild(p);

                                    terminal.scrollTop = terminal.scrollHeight;

                                    if (cmd.text.startsWith('>') || cmd.text.startsWith('root@')) {
                                        let charIndex = 0;
                                        function typeChar() {
                                            if (charIndex < cmd.text.length) {
                                                p.textContent += cmd.text.charAt(charIndex);
                                                charIndex++;
                                                setTimeout(typeChar, 30);
                                            } else {
                                                cmdIndex++;
                                                setTimeout(typeCommand, cmd.delay);
                                            }
                                        }
                                        typeChar();
                                    } else {
                                        p.textContent = cmd.text;
                                        cmdIndex++;
                                        setTimeout(typeCommand, cmd.delay);
                                    }
                                }

                                // Immediate start fallback if observer fails or element is already visible
                                try {
                                    const observer = new IntersectionObserver((entries) => {
                                        entries.forEach(entry => {
                                            if (entry.isIntersecting && !isWriting) {
                                                typeCommand();
                                                observer.disconnect(); // Run once
                                            }
                                        });
                                    }, { threshold: 0.1 }); // Lower threshold
                                    observer.observe(terminal);
                                } catch (e) {
                                    console.error("Observer failed, starting immediately");
                                    typeCommand();
                                }
                            });
                        </script>
