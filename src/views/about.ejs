<%- include('partials/header', { page: 'about' }) %>

    <div class="bg-white min-h-screen pt-20">

        <!-- Hero About -->
        <div class="relative py-20 bg-brand-primary border-b border-gray-200 overflow-hidden">
            <div class="absolute inset-0 z-0">
                <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?auto=format&fit=crop&w=1920&q=80"
